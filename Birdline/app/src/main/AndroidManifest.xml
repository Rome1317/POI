<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.birdline">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Birdline">
        <activity android:name=".activities.AddSubGroupActivity"></activity>
        <activity android:name=".activities.AddGroupActivity" />
        <activity android:name=".activities.GroupActivity" />
        <activity android:name=".activities.GroupListActicity" />
        <activity android:name=".activities.AddChatActivity" />
        <activity android:name=".models.Test" />
        <activity android:name=".activities.ChatActivity" />
        <activity android:name=".activities.LogInActivity" />
        <activity android:name=".activities.SignUpActivity" />
        <activity
            android:name=".activities.FirstActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.MainActivity" />
    </application>

</manifest>